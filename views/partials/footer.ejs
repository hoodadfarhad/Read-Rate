<script>
   



let menuTimeOut;

$("#menuTrigger").on("mouseover", function () {
    clearTimeout(menuTimeOut); // Stop any ongoing fade out timer

    // Smoothly fade in the menu
    $("#menu").stop(true, true).fadeIn(300);        // clearing the stack here
    $("#menuTrigger").addClass("noDisplay"); 
    $("#menu").css("display","inline-block");       // changin none to inline-block
});

$("#menu").on("mouseover", function () {
    clearTimeout(menuTimeOut); // Stop fade out if user moves to the menu
});

$("#menu, #menuTrigger").on("mouseleave", function () {
    menuTimeOut = setTimeout(function () { 
        $("#menu").stop(true, true).fadeOut(600);


        setTimeout(function () { 

        $("#menuTrigger").removeClass("noDisplay"); 
        
    }, 10);


      

    }, 3000); // Start hiding the menu after 5s
});








  </script>

